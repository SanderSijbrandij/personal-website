<section class="section">
  <div class="container" style="max-width: 300px; margin: 0 auto">
<h2 class='title size-1'>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <p class="control">
    <%= f.label :email, class: 'label' %>
    <%= f.email_field :email, autofocus: true, class: 'input' %>
  </p>

  <p class="control">
    <%= f.label :password, class: 'label' %>
    <%= f.password_field :password, autocomplete: "off", class: 'input' %>
  </p>

  <% if devise_mapping.rememberable? -%>
    <p class="control">
      <label class='checkbox'>
      <%= f.check_box :remember_me %>
      Remember me
      </label>
    </p>
  <% end -%>

  <p class="actions">
    <%= f.submit "Log in", class: 'button is-primary' %>
  </p>
<% end %>

<%= render "devise/shared/links" %>
</div>
</section>
